<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_3">
    <include layout="@layout/title_bar"
        android:id="@+id/order_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="收货地址：中国矿业大学南湖校区"
        android:padding="8dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="@color/white"/>

    <ListView
        android:id="@+id/order_list_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/tv_subtotal_fee"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textColor="@color/red_2"
        android:gravity="end"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:background="@color/white"
        android:hint="小计费用"/>

    <TextView
        android:id="@+id/tv_sending_fee"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="end"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:background="@color/white"
        android:hint="配送费用"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_total_fee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:background="@color/white"
            android:gravity="end"
            android:hint="订单总价"
            android:padding="10dp"
            android:textColor="@color/red_2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_total_fee"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:text="去支付"
            android:textSize="20sp" />
    </RelativeLayout>
</LinearLayout>