<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingStart="60dp"
    android:paddingEnd="60dp">
    <TextView
        android:id="@+id/dialogue_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:text="扬州炒饭"
        android:hint="菜品名称" />

    <TextView
        android:id="@+id/dialogue_rank"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:background="@color/orange"
        android:textSize="13sp"
        android:textColor="@color/red_1"
        android:text="门店销量第3名"
        android:hint="门店销量排名"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialogue_month_sell_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:textSize="11sp"
            android:textColor="@color/grey"
            android:gravity="center_vertical"
            android:padding="0dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="月售160"
            android:hint="月售数量"/>

        <TextView
            android:id="@+id/dialogue_praise_degree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:textSize="11sp"
            android:textColor="@color/grey"
            android:gravity="center_vertical"
            android:padding="0dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="好评度0.96"
            android:hint="好评度"/>
    </LinearLayout>

    <TextView
        android:id="@+id/dialogue_price"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:textSize="23sp"
        android:textColor="@color/red_2"
        android:gravity="center_horizontal"
        android:padding="3dp"
        android:text="￥6.0"
        android:hint="菜品价格"/>
</LinearLayout>