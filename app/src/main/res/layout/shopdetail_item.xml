<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/detail_image_button"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_detail_name"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="3dp"
            android:background="@color/transparent"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="start"
            android:padding="3sp"
            android:hint="菜品名称" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_detail_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:background="@color/orange"
                    android:textSize="13sp"
                    android:textColor="@color/red_1"
                    android:hint="门店销量排名"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_detail_month_sell_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:textSize="11sp"
                        android:textColor="@color/grey"
                        android:gravity="center_vertical"
                        android:padding="0dp"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:hint="月售数量"/>

                    <TextView
                        android:id="@+id/tv_detail_praise_degree"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:textSize="11sp"
                        android:textColor="@color/grey"
                        android:gravity="center_vertical"
                        android:padding="0dp"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:hint="好评度"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/btn_add_to_shopping_car"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:onClick="onClick"
                    android:text="加入购物车"
                    android:textSize="12sp"
                    android:padding="0dp"
                    android:layout_marginEnd="3dp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_detail_price"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:textSize="16sp"
            android:textColor="@color/red_2"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:hint="菜品价格"/>

    </LinearLayout>

</LinearLayout>